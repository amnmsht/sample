<div class ="container">
  <h1>ログイン</h1>
    <%= form_with(scope: :session, url: sessions_path) do |f| %>

  <form>
    <div class ="form-group">
      <%= f.label :メールアドレス %>
      <%= f.email_field :email,class:"form-control" %>
    </div>
    <div class ="form-group">
      <%= f.label :パスワード %>
      <%= f.password_field :password,class:"form-control" %>
    </div>
    <p><%= f.submit "ログイン",class: 'btn btn-info btn-sm' %></p>
    <% end %>
  </form>
</div>